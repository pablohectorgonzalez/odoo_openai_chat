<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_openai" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.openai.chat</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[@js_class='base_settings' or contains(concat(' ', normalize-space(@class), ' '), ' oe_form_configuration ')]" position="inside">
                <div class="o_settings_container">
                    <div class="settings">
                        <div class="app_settings_block" name="openai_chat_settings" string="OpenAI Chat" data-string="OpenAI Chat">
                            <h2>OpenAI Chat</h2>
                            <div class="o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="openai_enabled"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="openai_enabled"/>
                                    <div class="text-muted">
                                        Activa el comando /ai en Discuss y conversación 1:1 con el bot
                                    </div>
                                    <group name="openai_settings_group" invisible="[('openai_enabled','=',False)]">
                                        <field name="openai_api_key" password="True"/>
                                        <field name="openai_organization"/>
                                        <field name="openai_base_url"/>
                                        <field name="openai_model"/>
                                        <field name="openai_temperature"/>
                                        <field name="openai_context_count"/>
                                        <field name="openai_timeout"/>
                                        <field name="openai_system_prompt" placeholder="Eres un asistente útil para usuarios de Odoo..."/>
                                    </group>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
